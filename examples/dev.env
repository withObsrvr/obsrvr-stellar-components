# Development Environment Configuration
# Copy this file to .env in the project root for development

# Stellar Network Configuration
STELLAR_NETWORK=testnet
STELLAR_RPC_URL=https://soroban-testnet.stellar.org  
NETWORK_PASSPHRASE=Test SDF Network ; September 2015

# Processing Configuration
START_LEDGER=0
BATCH_SIZE=500
PROCESSOR_THREADS=2
EVENT_TYPES=payment,path_payment_strict_receive,path_payment_strict_send

# Output Configuration
OUTPUT_FORMATS=json,websocket
DATA_DIR=./data
WEBSOCKET_PORT=8080
API_PORT=8081

# Performance Configuration (reduced for development)
BUFFER_SIZE=5000
FLUSH_INTERVAL=10s

# Monitoring Configuration
LOG_LEVEL=debug
ENABLE_METRICS=true  
METRICS_PORT=9090

# Development Features
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG=true
REAL_TIME_ANALYTICS=true

# Docker Configuration
EXECUTION_MODE=native
DOCKER_REGISTRY=localhost
DOCKER_TAG=dev

# Optional Features (disabled for development)
ENABLE_DASHBOARDS=false
ENABLE_ALERTS=false
ENABLE_ML=false